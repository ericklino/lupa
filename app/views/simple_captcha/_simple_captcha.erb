<div class="captcha">
  <div class="captcha__field">
    <label class="form__label" for="captcha">Confirmação</label>
    <%= simple_captcha_options[:field] %>
  </div>

  <div class="captcha__content">
    <div class="captcha__btn">
      <%= simple_captcha_options[:refresh_button] %>
    </div>

    <div class="captcha__figure">
      <%= simple_captcha_options[:image] %>
    </div>
  </div>
</div>
