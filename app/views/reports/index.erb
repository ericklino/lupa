<link href="../../assets/stylesheets/simple-sidebar.css" rel="stylesheet">
<div id="wrapper">
  <%= render 'layouts/menu' %>

  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">

          <% if current_user.present? %>
          <h1 id ="texto-titulo">Seleção de Dispositivos</h1>
          <%else%>
          <h1 id ="texto-titulo">Seleção de Dispositivos</h1>
          <% end %>

          <div id="box-search" class="clearfix">
          <%= form_tag devices_path, :method => 'get', id: "search-form" do %>
          <%= text_field_tag :search, params[:search], placeholder: "Procurar...", id:"procure"%>
          <%= submit_tag "Procurar", id:"procurar", :name => nil%>
          <% end %>
          </div>

          <%if @device.present?%>

          <% @device.each do |device| %>
          <div id="divPBaixo"class="coluna-4 clearfix">
            <div id="image-device">
             <%= image_tag device.phone_img_url(:thumb)%>
            </div>
            <p id="name-device" class="centraliza"><%= device.model_device%> </p>
            <%= link_to "Gerar Relatório", report_path(device), class: "btn btn-primary"  %>
          </div>
          <%end%>
          <%else%>
          <div id="para-error">
          <p id="trapezio-descendente">Desculpe-me porém, não foi encontrado nada com este nome: " <%= params[:search]%>". </p>
          </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
